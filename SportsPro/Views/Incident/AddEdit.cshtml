@model Incident

@{
    string title = ViewBag.Action + "Incident";
    ViewBag.Title = title;
}
<h1>@ViewBag.Title</h1>
<form asp-action="AddEdit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Customer">Customer</label>
        <input asp-for="Customer" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product">Product</label>
        <input asp-for="Product" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateOpened">DateOpened</label>
        <input asp-for="DateOpened" class="form-control" />
    </div>
    <input asp-for="CustomerID" type=hidden />
    <button class="btn btn-primary" type="submit">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>
